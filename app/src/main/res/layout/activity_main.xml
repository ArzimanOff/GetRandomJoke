<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llOneJokeBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnNewGenerate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tvOneJokeSetup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:text="Hello World!"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@color/dark_blue"
            />

        <TextView
            android:id="@+id/tvOneJokePunchline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:text="Hello World!"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal"
            />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNewGenerate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cornerRadius="16dp"
        android:backgroundTint="@color/main_color"
        android:layout_marginTop="36dp"

        android:text="@string/btnNewGenerateText"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"

        app:icon="@android:drawable/stat_notify_sync"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>